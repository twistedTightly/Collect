<!DOCTYPE html>
<!--[if IE 9]><html class="lt-ie10" lang="en" > <![endif]-->
<html class="no-js" lang="en" >
  <head>
    <% include partials/head.ejs %>
    <link rel="stylesheet" href="stylesheets/profile.css">
    <title><%= username %></title>
  </head>

  <body>
    <div class="wrapper">
    	<header>
            <div class="left">
             <span id="logo"><img src="images/collect_logo.svg" alt="Logo"></span>
           </div>
           <div class="right" id="toolbar">
              <div class="svg-container">
                <a href="/connections"><img class="svg-icon" src="images/connections_icon_white.svg" alt="Connections"></a>
                <a href="#"><img class="svg-icon" src="images/messages_icon_white.svg" alt="Messages"></a>
              </div>
              <span class="header-text" id="user-info"><%= username %></span>
            </div>
      <!-- NOTE: The following *must* be included as it closes the header tag -->
      <% include partials/header-end.ejs %>

      <!-- Main body of the site -->
      <div id="main" class="row">

        <!-- User Information Block (on side) -->
        <div id="user-information-block" class="small-2 columns">
          <div class="header-text" id="user-information">

            <div id="profile-picture">
              <img src="images/my-profile-pic.jpg" alt="Profile picture">
            </div>
          
            <div class="svg-container" id="user-memories-count">
              <img class="svg-icon" src="images/icons/memories_icon_black.svg" alt="Memories icon">
            </div>
            <p><%= age %> memories</p>
            <hr />
            <div class="svg-container" id="user-connections-count">
              <img class="svg-icon" src="images/icons/connections_icon_black.svg" alt="Connections icon">
            </div>
            <p><%= age %> connections</p>

            <a href="#" data-reveal-id="add-memory-modal">
              <div id="add-memory" class="flat-button">Add</div>
            </a>

            <div id="add-memory-modal" class="reveal-modal" data-reveal>
              <h2>Create a memory.</h2>
              <p class="lead">You can add info here.</p>
              <p>I'm a cool paragraph that lives inside of an even cooler modal.</p>
              <a class="close-reveal-modal">&#215;</a>
            </div>

          </div>
        </div><!-- End User Information Block (on side) -->

        <!-- Memory Gallery (main part of page) -->
        <div id="memory-gallery" class="small-10 columns">
          <!-- Gallery Header -->
          <div id="gallery-header" class="row">
            <p id="username"><%= username %></p>
            <div id="user-location">
              <div class="svg-container">
                <img class="svg-icon" src="images/icons/location_icon_black.svg" alt="Map Pin Icon"/>
              </div>
              <p class="header-text">Location, Location</p>
            </div>
          </div><!-- End Gallery Header -->

          <div class="gallery-row row">
            <div class="test-block collection small-12 medium-6 large-3 columns">
              <div class="content-holder">
                <img src="images/memory.JPG" alt="Memory"/>
              </div>
            </div>
            <div class="test-block collection small-12 medium-6 large-3 columns">
              <div class="content-holder">
                <img src="images/memory.JPG" alt="Memory"/>
              </div>
            </div>
            <div class="test-block collection small-12 medium-6 large-3 columns">
              <div class="content-holder">
                <img src="images/memory.JPG" alt="Memory"/>
              </div>
            </div>
            <div class="test-block collection small-12 medium-6 large-3 columns">
              <div class="content-holder">
                <img src="images/memory.JPG" alt="Memory"/>
              </div>
            </div>
          </div>

          <div class="gallery-row row">
            <div class="test-block collection small-12 medium-6 large-3 columns">
              <div class="content-holder">
                <img src="images/memory.JPG" alt="Memory"/>
              </div>
            </div>
            <div class="test-block collection small-12 medium-6 large-3 columns">
              <div class="content-holder">
                <img src="images/memory.JPG" alt="Memory"/>
              </div>
            </div>
            <div class="test-block collection small-12 medium-6 large-3 columns">
              <div class="content-holder">
                <img src="images/memory.JPG" alt="Memory"/>
              </div>
            </div>
            <div class="test-block collection small-12 medium-6 large-3 columns">
              <div class="content-holder">
                <img src="images/memory.JPG" alt="Memory"/>
              </div>
            </div>
          </div>
        </div><!-- End Memory Gallery (main part of page) -->
      </div>
    </div>

    <% include partials/footer.ejs %>
    <% include partials/scripts.ejs %>
  </body>
</html>