<!DOCTYPE html>
<!--[if IE 9]><html class="lt-ie10" lang="en" > <![endif]-->
<html class="no-js" lang="en" >
  <head>
    <meta charset="utf-8">

    <title><%= username %></title>
    <meta name="description" content="Collect Log In">
    <meta name="viewport" content="width=device-width">

    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="css/foundation.min.css">
    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="style/test.css">

    <script src="js/vendor/modernizr.js"></script>
  </head>

  <body>
  	<header>
          <span id="logo">COLLECT</span>
          <span id="user-info"><%= username %></span>
          <a href="">
            <div id="pullout-menu" class="triangle-left"></div>
            <div id="pullout-menu-icon-holder">
                <img src="" alt="Pullout Menu"/>
            </div>
          </a>
    </header>

    <!-- Main body of the site -->
    <div id="main" class="row">
      <div id="user-information-block" class="small-2 columns" style="background-color: red;">
        <div id="user-information">
          <p>I'm <%= age %> years old</p>
          <a href="#" data-reveal-id="myModal">
            <div id="add-memory" class="flat-button">Add</div>
          </a>

          <div id="myModal" class="reveal-modal" data-reveal>
            <h2>Create a memory.</h2>
            <p class="lead">You can add info here.</p>
            <p>I'm a cool paragraph that lives inside of an even cooler modal.</p>
            <a class="close-reveal-modal">&#215;</a>
          </div>

        </div>
      </div>

      <div id="memory-gallery" class="small-10 columns" style="background-color: purple;">
        <div id="gallery-header" class="row" style="background-color: green;">
          <p id="username">Name of user</p>
          <div id="user-location">
            <img src="" alt="Map Pin Icon"/>
            <p>Location, Location</p>
          </div>
        </div><!-- End galler-header -->

        <div class="gallery-row row">
          <div class="test-block collection small-12 medium-6 large-3 columns">
            <div class="content-holder">
              <img src="images/memory.png" alt="Memory"/>
            </div>
          </div>
          <div class="test-block collection small-12 medium-6 large-3 columns">
            <div class="content-holder">
              <img src="images/memory.png" alt="Memory"/>
            </div>
          </div>
          <div class="test-block collection small-12 medium-6 large-3 columns">
            <div class="content-holder">
              <img src="images/memory.png" alt="Memory"/>
            </div>
          </div>
          <div class="test-block collection small-12 medium-6 large-3 columns">
            <div class="content-holder">
              <img src="images/memory.png" alt="Memory"/>
            </div>
          </div>
        </div>

        <div class="gallery-row row">
          <div class="test-block collection small-12 medium-6 large-3 columns">
            <div class="content-holder">
              <img src="images/memory.png" alt="Memory"/>
            </div>
          </div>
          <div class="test-block collection small-12 medium-6 large-3 columns">
            <div class="content-holder">
              <img src="images/memory.png" alt="Memory"/>
            </div>
          </div>
          <div class="test-block collection small-12 medium-6 large-3 columns">
            <div class="content-holder">
              <img src="images/memory.png" alt="Memory"/>
            </div>
          </div>
          <div class="test-block collection small-12 medium-6 large-3 columns">
            <div class="content-holder">
              <img src="images/memory.png" alt="Memory"/>
            </div>
          </div>
        </div>
      </div><!-- End memory-gallery -->
    </div>

    <!-- Timeline in footer -->
    <div class="row" style="background-color: blue;">
      <div>Test</div>
    </div>

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <script type="text/javascript" src="http://www.parsecdn.com/js/parse-1.3.3.min.js"></script>
    <script src="/js/vendor/foundation.min.js"></script>
    <script>
      $(document).foundation();
    </script>
    <script type="text/javascript" src="/js/vendor/foundation.reveal.js"></script>
  </body>
</html>